---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const projects = await getCollection('projects');
---

<Layout title="Projects | My Portfolio">
  <h1 class="text-3xl font-bold mb-8">Projects</h1>
  <div class="grid gap-6">
    {projects.map(project => (
      <article class="bg-white p-6 rounded-lg shadow-sm">
        <h2 class="text-xl font-semibold mb-2">
          <a href={`/projects/${project.slug}`} class="hover:text-blue-600">
            {project.data.title}
          </a>
        </h2>
        <p class="text-gray-600 mb-4">{project.data.description}</p>
        <div class="flex gap-2">
          {project.data.tech.map(tech => (
            <span class="bg-gray-100 px-3 py-1 rounded-full text-sm">{tech}</span>
          ))}
        </div>
      </article>
    ))}
  </div>
</Layout>