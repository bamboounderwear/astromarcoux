---
interface Props {
  title: string;
  content: string;
  image: {
    src: string;
    alt: string;
  };
  imageOnRight?: boolean;
  className?: string;
}

const { title, content, image, imageOnRight = false, className = '' } = Astro.props;
---

<div class:list={["grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12", className]}>
  <div class:list={[
    "space-y-4",
    { "md:order-2": !imageOnRight }
  ]}>
    <div class="overflow-hidden border border-gray-200">
      <img
        src={image.src}
        alt={image.alt}
        class="w-full h-auto"
      />
    </div>
  </div>
  <div class:list={[
    "space-y-4 flex flex-col justify-center",
    { "md:order-1": !imageOnRight }
  ]}>
    <h3 class="text-xl font-semibold">{title}</h3>
    <div class="prose prose-gray max-w-none">
      <p>{content}</p>
    </div>
  </div>
</div>