---
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50 min-h-screen flex flex-col">
    <nav class="bg-white shadow-sm">
      <div class="w-[95%] max-w-7xl mx-auto px-4 py-3">
        <div class="flex justify-between">
          <a href="/" class="text-xl font-semibold">Portfolio</a>
          <div class="space-x-4">
            <a href="/projects" class="hover:text-gray-600">Projects</a>
            <a href="/blog" class="hover:text-gray-600">Blog</a>
          </div>
        </div>
      </div>
    </nav>
    <main class="w-[95%] max-w-7xl mx-auto px-4 py-8 flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>